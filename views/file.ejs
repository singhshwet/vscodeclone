<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="../stylesheets/style.css">
  <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">
</head>

<body>
  <div id="main">
    <div id="left">
      <h3>VSCode-Visual Studio Code</h3>
      <hr>
      <div class="flleft">
        <h5>
          <%= fname %>
        </h5>
        <div id="iconfl">
          <i id="fileicon" class="ri-file-add-line"></i>
          <i id="foldericon" class="ri-folder-add-line"></i>
           <a href="/close"><i class="ri-refresh-line"></i></a>
        </div>

      </div>
      <form action="/create">
        <input style="display:none;" type="text" placeholder="Enter your file name" name="filename" id="filetxt">
      </form>
      <form action="/createfolder">
        <input style="display:none;" type="text" placeholder="Enter your folder name" name="foldername" id="foldertxt">
      </form>
      <div id="files">
        <% files.forEach(function(val){ %>
          <div class="morefile">
            <div class="filename">
              <% if(val.isfolder){ %>
                <i class="ri-arrow-right-s-line"></i>
               <% }else{ %>
                <i class="ri-file-code-line"></i>
               <% } %>
              <h5>
               <a href="/file/<%= val.name %>" ><%= val.name %></a>
              </h5>
            </div>
            <div class="icondlt">
              <i class="ri-pencil-line"></i>
              <a href="/delete/<%= val.name %>/<%= val.isfolder ? 1 : 0 %>"> <i class="ri-delete-bin-line"></i></a>
            </div>
          </div>
          <% }) %>

      </div>


    </div>
    <div id="right">
      <div id="nav">
        <div class="cross">
          <h5> <%= filename %></h5>
            <a href="/close"><i class="ri-close-line"></i></a>
        </div>

      </div>
      <div id="bottom">
        <form method="post" style="width: 100%;height: 100%;" action="/save/<%= filename %>">
          <textarea name="txtfile" id="" cols="30" rows="10"><%= fdata %></textarea>
          <input  style="position: absolute;top: 5px;right: 5%;border: none;background-color: blue;padding: 10px 22px;color: #fff;border-radius: 5px;" type="submit" value="save">
        </form>
        
        


      </div>
    </div>
  </div>



  <script>

function turningoff(){
  document.querySelector("#filetxt").style.display="none";
  document.querySelector("#foldertxt").style.display="none";
  
}
    document.querySelector("#fileicon").addEventListener("click",function(){
turningoff()
      document.querySelector("#filetxt").style.display="block"

    })
    document.querySelector("#foldericon").addEventListener("click",function(){
turningoff()
      document.querySelector("#foldertxt").style.display="block"
    })

  </script>
</body>

</html>